{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "tslib",
    "noUnusedLocals": true,
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "plugins": [{ "name": "tslint-language-service" }],
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "module": "esNext",
    "allowUnusedLabels": false,
    "incremental": true,
    "tsBuildInfoFile": "./buildcache/front-end"
  },
  "exclude": [
    "node_modules",
    "lib",
    "tests",
    "**/*.test.ts"
  ]
}